<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sale_person_incentive_summary_report" model="ir.actions.act_window">
        <field name="name">Sale Person Incentive Summary Report</field>
        <field name="res_model">sales.person.incentive.summary.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="sale_person_incentive_summary_report_form" model="ir.ui.view">
        <field name="name">Sales Person Incentive Summary Report</field>
        <field name="model">sales.person.incentive.summary.report</field>
        <field name="arch" type="xml">
            <form string="Sales Person Incentive Summary Report" create="0">
                <h1 style="color:purple;font-weight:1000;text-align:center;">Sales Incentive Summary Report</h1>
                <sheet>
                    <header>
                        <button name="action_check_sale_person_incentive_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="sale_person_incentive" style="border: 2px solid #990099; padding: 10px;">
                        <group name="sale_person_incentive_group">
                            <field name="ref_company_id" widget="res_partner_many2one" required="1"
                                   placeholder="Select Company" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                            <field name="sale_person" placeholder="Please Select Sale Employee..." domain="[('sale_employee','=', 'yes'),('company_id', '=', ref_company_id)]" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                        </group>
                        <group name="incentive_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="Incentive Summary Report">
                            <field name="sale_person_summary_incentive_ids" readonly="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="sale_person_id"/>
                                    <field name="incentive_rule_name"/>
                                    <field name="base_value" sum="Sum of Total"/>
                                    <field name="amount" sum="Sum of Total"/>
                                    <field name="ref_company_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="reporting_sale_person_incentive_summary_report"
              name="Sales Incentive Summary Report"
              parent="sale.menu_sale_report"
              action="nhcl_customizations.sale_person_incentive_summary_report"
              sequence="2"/>

</odoo>

