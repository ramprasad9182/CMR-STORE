<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_tax_summary_report_view" model="ir.ui.view">
            <field name="name">pos.tax.summary.report.view</field>
            <field name="model">pos.tax.summary.report</field>
            <field name="arch" type="xml">
                <form string="POS Tax Summary Report">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                        </group>
                        <group>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                            <field name="company_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                            <field name="pos_conig_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="pos_tax_summary_receipt" class="btn btn-primary" string="Print PDF"
                                type="object"/>
                        <button name="pos_tax_xls_report" class="btn btn-primary" string="Print XLS"
                                type="object"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="pos_tax_summary_report_wizard_action" model="ir.actions.act_window">
            <field name="name">POS Tax Summary Report</field>
            <field name="res_model">pos.tax.summary.report</field>
            <field name="view_id" ref="pos_tax_summary_report_view"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem
                id="pos_tax_summary_report_menu"
                name="POS Tax Summary Report"
                action="pos_tax_summary_report_wizard_action"
                parent="nhcl_bi_pos_reports.menu_report_parent"
                sequence="10"
        />
        <record id="pos_paper_format" model="report.paperformat">
            <field name="name">Sales Details</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">230</field>
            <field name="page_width">110</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="orientation">Portrait</field>
            <field name="header_spacing">36</field>
            <field name="dpi">150</field>
        </record>
        <record id="action_pos_tax_summary_report" model="ir.actions.report">
            <field name="name">POS Tax Summary</field>
            <field name="model">pos.tax.summary.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">nhcl_bi_pos_reports.report_pos_tax_summary</field>
            <field name="report_file">nhcl_bi_pos_reports.report_pos_tax_summary</field>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="nhcl_bi_pos_reports.pos_paper_format"/>
        </record>
    </data>
</odoo>
