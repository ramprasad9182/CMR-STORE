<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderAccessRight" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//button[@t-if='allowNewOrders']" position="replace">
            <button t-if="allowNewOrders" class="highlight btn btn-lg btn-primary"
                    t-on-click="() => this.onCreateNewOrder()"
                    t-att-disabled="new_order_access">New Order</button>
        </xpath>
        <xpath expr="//div[@t-if='!shouldHideDeleteButton(order)']" position="attributes">
            <attribute name="t-if">
                this.delete_order_access
            </attribute>
        </xpath>
    </t>
</templates>
