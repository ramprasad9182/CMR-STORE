<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="setu_sales_incentive_structure_tree_view" model="ir.ui.view">
            <field name="name">setu.sales.incentive.structure.tree.view</field>
            <field name="model">setu.sales.incentive.structure</field>
            <field name="arch" type="xml">
                <tree string="Sales Incentive">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="warehouse_ids" widget="many2many_tags"/>
                    <field name="company_id"/>
                    <field name="incentive_state"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="setu_sales_incentive_structure_search_view" model="ir.ui.view">
            <field name="name">setu.sales.incentive.structure.search.view</field>
            <field name="model">setu.sales.incentive.structure</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Name" filter_domain="[('name','ilike', self)]"/>
                    <field name="warehouse_ids" string="Warehouse"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <group expand="1" string="Group By">
                        <filter string="Company" name="groupby_company" context="{'group_by':'company_id'}"/>
                        <filter string="Warehouse" name="warehouse" context="{'group_by': 'warehouse_ids'}"/>
                        <filter string="Incentive Account" name="incentive_account"
                                context="{'group_by':'incentive_account_id'}"/>
                        <filter string="Incentive Calculation Based On" name="incentive_calculation"
                                context="{'group_by': 'incentive_calculation_based_on'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Form View -->
        <record id="setu_sales_incentive_structure_form_view" model="ir.ui.view">
            <field name="name">setu.sales.incentive.structure.form.view</field>
            <field name="model">setu.sales.incentive.structure</field>
            <field name="arch" type="xml">
                <form string="Sales Incentive">
                    <header>
                        <button name="recompute_incentive" type="object" string="Recompute Incentive"
                                invisible="incentive_state in ['draft','closed']"/>
                        <button name="action_confirm_incentive_structure" type="object" string="Confirm Incentive"
                                invisible="incentive_state not in ['draft']"/>
                        <button name="action_close_incentive_structure" type="object" string="Close Incentive"
                                invisible="incentive_state in ['closed']"/>
                        <field name="incentive_state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div>
                            <label for="name" string="Incentive Structure"/>
                            <h1>
                                <field name="name" nolabel="1" readonly="incentive_state in ['confirmed','closed']"/>
                            </h1>
                        </div>
                        <group string="Incentive Timeline">
                            <group>
                                <field name="start_date" string="Date" widget="daterange" options="{'end_date_field': 'end_date'}"
                                       readonly="incentive_state in ['confirmed','closed']"/>
                                <field name="end_date" readonly="incentive_state in ['confirmed','closed']" invisible="1"/>
                            </group>
                        </group>
                        <group string="Incentive Configuration">
                            <group>
                                <field name="incentive_calculation_based_on"
                                       readonly="incentive_state in ['confirmed','closed']"/>
                                <field name="incentive_account_id" required="1"
                                       readonly="incentive_state in ['confirmed','closed']"/>
                                <field name="incentive_structure_type" required="1"
                                       readonly="incentive_state in ['confirmed','closed']"/>
                            </group>
                            <group>
                                <field name="company_id" readonly="incentive_state in ['confirmed','closed']"/>
                                <field name="warehouse_ids" domain="[('company_id', '=', company_id)]"
                                       widget="many2many_tags" readonly="incentive_state in ['confirmed','closed']"/>
                            </group>
                        </group>

                        <!-- Notebook -->
                        <notebook>
                            <!-- Sales Incentive Lines -->
                            <page string="Sales Incentive Line">
                                <button name="get_serial_numbers" type="object" string="Get Serial Numbers" invisible="incentive_state in ['confirmed','closed']"/>
                                <field name="incentive_structure_line_ids" widget="section_and_note_one2many"
                                       mode="tree,kanban" nolabel="1"
                                       readonly="incentive_state in ['confirmed','closed']">

                                    <tree string="Sales Incentive Structure Line" editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="incentive_structure_id" column_invisible="True"/>
                                        <field name="company_id" column_invisible="True"/>
                                        <field name="role"/>
                                        <field name="sales_team_ids" widget="many2many_tags"
                                               required="role in ['sales_person', 'sales_manager']"
                                               invisible="role == 'agent'"
                                               options="{'no_create': True, 'no_edit': True, 'no_create_edit':True}"
                                        />
<!--                                        <field name="sales_agent_group_ids" widget="many2many_tags"-->
<!--                                               required="role == 'agent'"-->
<!--                                               invisible="role != 'agent'"-->
<!--                                               options="{'no_create': True, 'no_edit': True, 'no_create_edit':True}"-->
<!--                                        />-->
                                        <field name="aging_type"/>
                                        <field name="aging_id" options="{'no_create': True, 'no_open': True, 'no_edit':True}"
                                        context="{'tree_view_ref': 'cmr_customizations.view_product_aging_line_tree'}"/>
                                        <field name="day_ageing_incentive" invisible="aging_type == 'day_aging'"/>
                                        <field name="calculate_based_on"/>
                                        <field name="target_based_on"/>
                                        <field name="calculation_method"/>
<!--                                        <field name="product_aging" widget="many2many_tags" invisible="target_based_on != 'aging'"/>-->
                                        <field name="lot_ids" widget="many2many_tags" invisible="target_based_on != 'aging'"/>
                                        <field name="incentive_value"/>
                                        <field name="target_value_min"/>
                                        <field name="target_value_max"/>
                                        <field name="product_ids" widget="many2many_tags"
                                               required="calculate_based_on == 'product'"
                                               invisible="calculate_based_on !=  'product'"/>
                                        <field name="category_ids" widget="many2many_tags"
                                               required="calculate_based_on == 'category'"
                                               invisible="calculate_based_on != 'category'"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Menu Action View -->
        <record id="setu_sales_incentive_structure_action" model="ir.actions.act_window">
            <field name="name">Sales Incentive Structure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setu.sales.incentive.structure</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="setu_sales_incentive_structure_tree_view"/>
        </record>

<!--        <menuitem id="sales_incentive_configuration_menu" name="Configuration"-->
<!--                  parent="cmr_customizations.logistic_menu_root" sequence="7"/>-->

        <!-- Child Menu -->


        <menuitem id="setu_sales_incentive_structure_main_menu" name="Sales Incentive Structure"
                  parent="sale.menu_sale_config" action="setu_sales_incentive_structure_action"
                  sequence="1"/>
    </data>
</odoo>
