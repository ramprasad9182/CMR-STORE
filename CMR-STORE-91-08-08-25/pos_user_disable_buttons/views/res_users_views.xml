<odoo>
    <data>
        <record id="kh_pos_rights_res_users_form" model="ir.ui.view">
            <field name="name">kh.pos.rights.res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="POS Access" name="point_of_sale">
                        <group name="pos_user_rights">
                            <group>
                                <field name="allow_discount_button"/>
                                <field name="allow_numpad_button"/>
                                <field name="allow_plusminus_button"/>
                                <field name="allow_qty_button"/>
                                <field name="allow_remove_button"/>
                                <field name="allow_price_button"/>
                            </group>
                            <group>
                                <field name="allow_payment_button"/>
                                <field name="allow_refund_button"/>
                                <field name="allow_customer_selection"/>
                                <field name="allow_new_order_button"/>
                                <field name="allow_delete_order_button"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
