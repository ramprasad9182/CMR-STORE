<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="RefundAccessRight" t-inherit="point_of_sale.RefundButton"
       t-inherit-mode="extension">
        <xpath expr="//button[hasclass('control-button')]" position="replace">
            <button class="control-button btn btn-light rounded-0 fw-bolder" t-on-click="() => this.click()" t-att-disabled="this.refund_access">
                <i class="fa fa-undo me-1" role="img" aria-label="Refund" title="Refund"/>
                Refund
            </button>
        </xpath>
    </t>
</templates>
