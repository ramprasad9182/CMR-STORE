<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hsn_category_action" model="ir.actions.act_window">
        <field name="name">HSN Category</field>
        <field name="res_model">hsn.category</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="hsn_category_selection_view_tree" model="ir.ui.view">
        <field name="name">hsn.category.view.tree</field>
        <field name="model">hsn.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom" create="1" delete="1" string="Chart of accounts">
                <header>
                    <button name="action_category_selection" class="btn oe_stat_button btn-outline-primary flex-grow-1 flex-lg-grow-0" icon="fa-list" type="object" title="VIEW HSN CODES"/>
                </header>
                <field name="hsn_code_category"></field>
                <field name="company_id"></field>
            </tree>
        </field>
    </record>
</odoo>
