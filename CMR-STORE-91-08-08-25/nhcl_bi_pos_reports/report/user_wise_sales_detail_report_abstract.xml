<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="user_wise_sales_detail_doc">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h1 style="width:100%; text-align:center;">
                            <strong>User Wise POS Sales Detail Report</strong>
                        </h1>
                        <br/>
                        <div class="column" style="text-align:center;">
                            <h5>
                                <strong>Companies :
                                    <t t-esc="doc_ids.company_record()"/>
                                </strong>
                            </h5>
                        </div>
                        <br/>
                        <div style="width:100%;" class="row">
                            <div style="width:33%; text-align:left;" class="column">
                                <h5 style="text-align: left">
                                    <strong>Start Date :
                                        <t t-esc="doc_ids.start_date"/>
                                    </strong>
                                </h5>
                            </div>
                            <div style="width:33%; text-align:left;" class="column">
                                <h5 style="text-align: center">
                                    <strong>End Date :
                                        <t t-esc="doc_ids.end_date"/>
                                    </strong>
                                </h5>
                            </div>
                            <div style="width:33%; text-align:right;" class="column">
                                <h5 style="text-align: right">
                                    <strong>Status :
                                        <t t-esc="doc_ids.status_record()"/>
                                    </strong>
                                </h5>
                            </div>
                        </div>
                        <br/>
                        <t t-as="person" t-foreach="data['sale_details'].keys()">
                            <h5 style="text-align: center; margin-bottom:5px;">
                                <strong>
                                    Sale Person :
                                    <t t-esc="person"/>
                                </strong>
                            </h5>
                            <table style="width:100%; margin-left:auto; margin-right: auto;"
                                   class="table table-bordered">
                                <tr>
                                    <th style="text-align:center;">
                                        <b>Order Number</b>
                                    </th>
                                    <th style="text-align:center;">
                                        <b>Order Date</b>
                                    </th>
                                    <th style="text-align:center;">
                                        <b>Customer</b>
                                    </th>
                                    <th style="text-align:center;">
                                        <b>Total</b>
                                    </th>
                                </tr>
                                <t t-as="order" t-foreach="sale_details[person]['lines']">
                                    <tr>
                                        <td style="text-align:center;">
                                            <t t-esc="order[0]"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <t t-esc="order[1]"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <t t-esc="order[2]"/>
                                        </td>
                                        <td style="text-align:center;">
                                            <t t-esc="'%.2f'%order[3]"/>
                                        </td>
                                    </tr>
                                </t>
                                <td/>
                                <td/>
                                <td style="text-align:center;">
                                    <span>
                                        <strong>Total</strong>
                                    </span>
                                </td>
                                <td style="text-align:center;">
                                    <t t-esc="'%.2f'% sale_details[person]['total'][0]"/>
                                </td>
                            </table>
                            <br/>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
