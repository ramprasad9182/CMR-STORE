<odoo>
    <record id="view_store_user_license_key_form" model="ir.ui.view">
        <field name="name">license.key.form</field>
        <field name="model">license.key</field>
        <field name="arch" type="xml">
            <form string="License Screen">
                <sheet>
                    <group>
                         <group>
                             <field name="license_key" readonly="is_create"/>
<!--                            <field name="expiry_date"/>-->
                        </group>
                        <group>
<!--                             <field name="note" readonly="is_create"/>-->
                             <field name="is_verified" invisible="1"/>
                            <field name="is_create" invisible="1"/>
                        </group>
                    </group>
                    <div class="oe_button_box" style="text-align: right">
                        <button name="action_for_decrypt_license_key" type="object" string="Verify License Key" class="btn-primary"  style="margin-right: 10px;" invisible="is_create"/>
                        <button name="action_for_create_button_wizard" type="object" string="Create Users" class="btn-primary" invisible="is_verified"/>
                    </div>
                    <notebook>
                        <page string="License User List">
                            <field name="license_line_ids">
                                <tree editable="bottom">
                                    <field name="s_no"/>
                                    <field name="season_name"/>
                                    <field name="employee_id"/>
                                    <field name="employee_email"/>
                                    <field name="from_date"/>
                                    <field name="to_date"/>
                                    <field name="status" decoration-info="status == 'waiting'"
                                    decoration-primary="status in ['created','employee_created']" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

     <record id="view_store_user_license_key_tree" model="ir.ui.view">
        <field name="name">license.key.tree</field>
        <field name="model">license.key</field>
        <field name="arch" type="xml">
            <tree string="License Key Tree View">
                <field name="sequence"/>
                <field name="doc_date"/>
            </tree>
        </field>
    </record>

    <record id="action_for_store_user_license_key" model="ir.actions.act_window">
        <field name="name">Import License Key</field>
        <field name="res_model">license.key</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_stores_license_key_setting" name="Import User License Key"
              parent="nhcl_customizations.nhcl_cmr_configuration"
              sequence="5"
              action="action_for_store_user_license_key"/>
</odoo>
