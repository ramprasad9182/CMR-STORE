<odoo>

    <record id="dev_transport_details_from_view" model="ir.ui.view">
        <field name="name">dev.transport.details.form.view</field>
        <field name="model">dev.transport.details</field>
        <field name="arch" type="xml">
            <form string="Transpoter Details" create="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object"
                                name="action_view_vehicles_details" 
                                invisible="vehicle_count == 0"
                                class="oe_stat_button"
                                icon="fa-truck"
                        >
<!--                        invisible="vehicle_count == 0"-->
<!--                         attrs="{'invisible':[('vehicle_count','=',0)]}"-->
                            <field name="vehicle_count" widget="statinfo" string="Vehicle"/>
                        </button>

                        <button type="object"
                                name="action_view_delivery_order" 
                                invisible="delivery_order_count == 0"
                                class="oe_stat_button"
                                icon="fa-truck"
                        >
<!--                        invisible="delivery_order_count == 0"-->
<!--                        attrs="{'invisible':[('delivery_order_count','=',0)]}"-->
                            <field name="delivery_order_count" widget="statinfo" string="Delivery"/>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h2>
                            <field name="name" placeholder="Name.." required="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="contact_name"/>
                            <span class="o_form_label o_td_label" name="address_name">
                                <b>Address</b>
                            </span>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State"
                                       options="{'no_open': True, 'no_quick_create': True}"
                                       context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country"
                                       options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                            </div>
                        </group>
                        <group>
                            <field name="comment"/>
                            <field name="phone"/>
                            <field name="mobile" required="1"/>
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--tree-->
    <record id="dev_transport_details_tree_view" model="ir.ui.view">
        <field name="name">dev.transport.details.tree.view</field>
        <field name="model">dev.transport.details</field>
        <field name="arch" type="xml">
            <tree string="Transpoter Details" create="0">
                <field name="name"/>
                <field name="mobile"/>
            </tree>
        </field>
    </record>

    <record id="dev_transport_details_filter_view" model="ir.ui.view">
        <field name="name">dev.transport.details.filter</field>
        <field name="model">dev.transport.details</field>
        <field name="arch" type="xml">
            <search string="Transpoter Details">
                <field name="name"/>
                <field name="mobile"/>
                <field name="phone"/>
            </search>
        </field>
    </record>
    <record id="dev_transport_details_kanban" model="ir.ui.view">
        <field name="name">dev.transport.details.kanban</field>
        <field name="model">dev.transport.details</field>
        <field name="arch" type="xml">
            <kanban string="Transpoter Details"
                    class="o_emphasize_colors o_kanban_dashboard o_slide_kanban breadcrumb_item active" edit="false"
                    sample="1">
                <!--                <field name="color"/>-->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="d-flex flex-column p-0 oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_content p-0 m-0 position-relative row d-flex flex-fill">
                                <div class="col-3">
                                    <div style="margin-left:-20px;">
                                        <field name="image_1920" widget="image" class="oe_avatar"/>
                                    </div>
                                </div>
                                <div class="col-9 py-2 px-3 d-flex flex-column justify-content-between pt-3">
                                    <div>
                                        <div class="o_kanban_record_title o_text_overflow"
                                             t-att-title="record.name.value"
                                             style="font-size: 16px;font-bold: True;">
                                            <field name="name"/>
                                        </div>
                                        <div>
                                            <span t-if="record.contact_name.value">
                                                <b>Contact Person </b>: <field name="contact_name"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span t-if="record.phone">
                                                <b>Phone </b>: <field name="phone"/>
                                            </span>
                                        </div>
                                        <div>
                                            <span t-if="record.mobile">
                                                <b>Mobile </b>: <field name="mobile"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <!--Action-->
    <record id="action_dev_transport_details" model="ir.actions.act_window">
        <field name="name">Transporters</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dev.transport.details</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'create': False,'edit':False}</field>
        <field name="view_id" ref="dev_transport_details_kanban"/>
    </record>

    <menuitem name="Transporters"
              id='menu_action_transport_details'
              parent="menu_parent_transport"
              action="action_dev_transport_details"
              sequence="1"/>

</odoo>
