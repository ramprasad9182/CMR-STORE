<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="loyalty_program_view_form_active_program" model="ir.ui.view">
        <field name="name">loyalty.program.view.form.active.program</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='date_to']" position="after">
                <field name="is_active" string="Active Program" widget="boolean_toggle" />
            </xpath>
        </field>
    </record>

    <record id="action_owl_pos_dashboard" model="ir.actions.client">
        <field name="name">Pos Dashboard</field>
        <field name="tag">owl.pos_dashboard</field>
    </record>

    <!--    invoice type menu -->
    <menuitem id="menu_pos_dashboard"
              name="Promotion Dashboard"
              sequence="3"
              action="action_owl_pos_dashboard"
              parent="point_of_sale.menu_point_root"/>
</odoo>
