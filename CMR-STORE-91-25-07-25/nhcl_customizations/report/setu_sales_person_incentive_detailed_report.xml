<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="search_sales_person" model="ir.ui.view">
        <field name="name">Sale Person Search</field>
        <field name="model">sales.person.incentive.report.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="sale_person_id"/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="sale_person_id" string="SalePerson" context="{'group_by' : 'sale_person_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="sale_person_incentive_report" model="ir.actions.act_window">
        <field name="name">Sale Person Incentive Report</field>
        <field name="res_model">sales.person.incentive.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="sale_person_incentive_report_form" model="ir.ui.view">
        <field name="name">Sales Person Incentive Report</field>
        <field name="model">sales.person.incentive.report</field>
        <field name="arch" type="xml">
            <form string="Sales Person Incentive Report" create="0">
                <h1 style="color:purple;font-weight:1000;text-align:center;">Sales Incentive Report</h1>
                <sheet>
                    <header>
                        <button name="action_check_sale_person_incentive_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="sale_person_incentive" style="border: 2px solid #990099; padding: 10px;">
                        <group name="sale_person_incentive_group">
                            <field name="ref_company_id" widget="res_partner_many2one" required="1"
                                   placeholder="Select Company" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                            <field name="sale_person" placeholder="Please Select Sale Employee..." domain="[('sale_employee','=', 'yes'),('company_id', '=', ref_company_id)]" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                        </group>
                        <group name="incentive_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="Incentive Report">
                            <field name="sale_person_incentive_ids" readonly="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="sale_person_id" />
                                    <field name="name"/>
                                    <field name="pos_date"/>
                                    <field name="incentive_rule_name"/>
                                    <field name="base_value" sum="Sum of Total"/>
                                    <field name="amount" sum="Sum of Total"/>
                                    <field name="ref_company_id"/>
                                                    <groupby name="sale_person_id">
                                                    </groupby>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <!--                                <div class="oe_chatter">-->
                <!--                                    <field name="message_follower_ids"/>-->
                <!--                                    <field name="activity_ids"/>-->
                <!--                                    <field name="message_ids"/>-->
                <!--                                </div>-->
            </form>
        </field>
    </record>

    <menuitem id="reporting_sale_person_incentive_report"
              name="Sales Incentive Detailed Report"
              parent="sale.menu_sale_report"
              action="nhcl_customizations.sale_person_incentive_report"
              sequence="1"/>

</odoo>

