<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bi_sale_order_inherited_form_view" model="ir.ui.view">
            <field name="name">sale.order.inherited.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_template_id']" 
                        position="replace">
                    <field name="product_template_id"
                        string="Product"
                        optional="show"
                        invisible="0"
                        readonly = "product_updatable == False"
                        required = "display_type == False"
                        
                        context="{
                             'order_line_id':context.get('active_id'),
                             'create_date_model':'sale.order.line',
                             'partner_id': parent.partner_id,
                             'quantity': product_uom_qty,
                             'pricelist': parent.pricelist_id,
                             'uom':product_uom,
                             'company_id': parent.company_id,
                             'default_list_price': price_unit,
                             'default_description_sale': name,
                         }"
                        options="{'no_open': True,'no_create': True,'no_edit':True}"
                        domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id),('nhcl_type','=',parent.dummy_so_type)]"
                        widget="sol_product_many2one"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_inherited_form_view" model="ir.ui.view">
            <field name="name">inherited.account.move.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True, 'no_open': True, 'no_edit':True}</attribute>
                    <attribute name="domain">[('id', 'in', ref_partner_ids)]</attribute>
                </xpath>
                <xpath expr="//sheet//notebook//page[1]//field[@name='invoice_line_ids']//tree//field[@name='product_id']"
                        position="replace">
                    <field name="product_id"
                        optional="show" options="{'no_open': True,'no_create': True,'no_edit':True}"
                        context="{
                             'order_line_id':context.get('active_id'),
                             'create_date_model':'account.move.line',
                         }"
                        domain="
                             context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')
                             and [('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]
                             or [('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]
                        "/>
                </xpath>
            </field>
    </record>

    <record id="purchase_order_form_bi_inherit" model="ir.ui.view">
			<field name="name">purchase.order.form.bi.inherit</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form" />
			<field name="arch" type="xml">
				
				<xpath
					expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_id']"
					position="replace">
					<field
                        name="product_id"
                        readonly="state in ['purchase', 'to approve','done', 'cancel']"
                        required = "display_type == False"
                        options="{'no_open': True,'no_create': True,'no_edit':True}"
                        context="{
                        'order_line_id':context.get('active_id'),
                        'create_date_model':'purchase.order.line',
                        'partner_id':parent.partner_id, 
                        'quantity':product_qty,
                        'uom':product_uom, 
                        'company_id': parent.company_id}"
                        force_save="1" domain="[('purchase_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id),('nhcl_type','=',parent.dummy_po_type),('type', 'in', ['consu', 'product'])]"/>
				</xpath>
			</field>
		</record>

        <record id="stock_scrap_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.scrap.form.view.inherit</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="replace">
                <field name="product_id" options="{'no_open': True,'no_create': True,'no_edit':True}"
                    context="{'default_detailed_type': 'product',
                        'order_line_id':context.get('active_id'),
                        'create_date_model':'stock.scrap'}"
                    />            
            </xpath>
        </field>
    </record>


    <record id="view_move_form_field_custom_fields" model="ir.ui.view">
        <field name="name">view.move.form.field.custom.fields</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']//tree//field[@name='product_id']"
                   position="replace">
                <field name="product_id" required="1" 
                context="{'default_detailed_type': 'product',
                        'order_line_id':context.get('active_id'),
                        'create_date_model':'stock.move'
                }" options="{'no_open': True,'no_create': True,'no_edit':True}"
                readonly="state != 'draft' or not additional and move_lines_count &gt; 0" domain="[('nhcl_type','=',parent.dummy_stock_type)]"
                />
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_field_custom" model="ir.ui.view">
        <field name="name">view.move.tree.field.custom</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="replace">   
                <field name="product_id" 
                       readonly="context.get('single_product', False) and 'id != False'" force_save="1"
                       context="{
                        'order_line_id':context.get('active_id'),
                        'create_date_model':'stock.quant'}" 
                       options="{'no_create': True}" widget="many2one"/>
            </xpath>
        </field>
    </record>

    <record id="view_warehouse_orderpoint_tree_editable_inherited_purchase" model="ir.ui.view">
        <field name="name">stock.warehouse.orderpoint.tree.editable.inherit.purchase</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable"/>
        <field name="arch" type="xml">
            <field name="product_id" position="replace">
                <field name="product_id" options="{'no_open': True,'no_create': True,'no_edit':True}"
                    readonly="product_id" force_save="1"
                    context="{
                        'order_line_id':context.get('active_id'),
                        'create_date_model':'stock.warehouse.orderpoint'}"
                />
            </field>
        </field>
    </record>
    </data>
</odoo>