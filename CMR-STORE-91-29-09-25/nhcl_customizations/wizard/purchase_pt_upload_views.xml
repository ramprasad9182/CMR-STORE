<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_purchase_pt_upload_wizard_form" model="ir.ui.view">
        <field name="name">purchase.pt.upload.wizard.form</field>
        <field name="model">purchase.pt.upload.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload PT Excel">
                <group>
                    <field name="order_id" readonly="1"/>
                    <field name="file_data" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_import_file" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
