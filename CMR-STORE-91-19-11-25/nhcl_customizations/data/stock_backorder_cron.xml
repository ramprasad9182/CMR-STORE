<odoo>
    <record id="ir_cron_check_backorder_notification" model="ir.cron">
        <field name="name">Check Old Backorders</field>
        <field name="model_id" ref="model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">model._cron_notify_old_backorders()</field>
        <field name="interval_type">days</field>
        <field name="interval_number">1</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <!-- set nextcall to next 10:00 AM (UTC) -->
<!--        <field name="nextcall"-->
<!--                   eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 04:30:00')"/>-->
    </record>
</odoo>


